{
    "title": "Today I Learned",
    "about": "simonw/til",
    "about_url": "https://github.com/simonw/til",
    "databases": {
        "til": {
            "queries": {
                "search": "select\n  til_fts.rank,\n  til.*\nfrom\n  til\n  join til_fts on til.rowid = til_fts.rowid\nwhere\n  til_fts match case\n    :q\n    when '' then '*'\n    else escape_fts(:q)\n  end\norder by\n  til_fts.rank limit 20\n",
                "feed": "SELECT\n  'tag:til.simonwillison.net,' || path as atom_id,\n  title as atom_title,\n  created_utc as atom_updated,\n  render_markdown(body) as atom_content_html\nFROM\n  til\norder by\n  created_utc desc\nlimit\n  15"
            },
            "tables": {
                "til": {
                    "sort_desc": "updated_utc",
                    "facets": [
                        "topic"
                    ],
                    "plugins": {
                        "datasette-render-markdown": {
                            "columns": [
                                "body"
                            ],
                            "extra_tags": [
                                "img",
                                "hr",
                                "br",
                                "details",
                                "summary",
                                "input",
                                "div",
                                "span"
                            ],
                            "extra_attrs": {
                                "input": [
                                    "type",
                                    "disabled",
                                    "checked"
                                ],
                                "img": [
                                    "src"
                                ],
                                "div": [
                                    "class"
                                ],
                                "span": [
                                    "class"
                                ]
                            },
                            "extensions": [
                                "mdx_gfm:GithubFlavoredMarkdownExtension"
                            ]
                        }
                    }
                }
            }
        }
    }
}
